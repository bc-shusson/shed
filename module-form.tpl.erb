<% if fields["displayName"]%>
  <display-name ng-model="moduleCtrl.providerConfig.displayName"></display-name>
<% end %>

<% text_fields = fields.keys & ["authCode", "productId", "workingKey", "account", "hostedPayPageToken", "hostedPayPageId", "accessCode", "secureHash", "sharedSecret", "accountName", "storeId", "storeNumber", "secCode", "email", "mbEmail", "merchantId", "userName", "pspId", "terminalId", "operatorId", "logoUrl", "vendorId", "vendorId", "userId", "partnerId", "login", "partner" ] %>
<% if text_fields.any?%>
  <% for field in text_fields %>
    <form-input-general name="<%=field%>"
                    label="{{ '<%=fields[field]['title']%>' | translate }}"
                    ng-model="moduleCtrl.providerConfig.<%=field%>"
                    tooltip-text="{{ '<%=fields[field]['help']%>' | translate }}"
                    type="text"
                    required="true">
    </form-input-general>
  <% end %>
<% end %>

<% password_fields = fields.keys & ["securenetSecureKey", "accountpassword", "passPhrase", "password", "signatureIn", "signatureOut", "secretWord", "vendorPassword"] %>
<% if password_fields.any? %>
  <% for field in password_fields %>
    <password ng-model="moduleCtrl.providerConfig.<%=field%>"
          <% if fields[field]['title'] != "Password" %>label="{{ '<%=fields[field]['title']%>' | translate }}"<% end %>
          <% if fields[field]['help'] %>tooltip-text="{{ '<%=fields[field]['help']%>' | translate }}"<% end %>
          required>
    </password>
  <% end %>
<% end %>

<% dropdown_fields = fields.keys & ["languageCode", "gatewayMode"] %>
<% if dropdown_fields.any? %>
  <% for field in dropdown_fields %>
    <form-select-general name="<%=field%>"
                    label="{{ '<%=fields[field]['title']%>' | translate }}"
                    ng-model="moduleCtrl.providerConfig.<%=field%>"
                    tooltip-text="{{ '<%=fields[field]['help']%>' | translate }}"
                    options="&REPLACEME&"
                    required>
    </form-select-general>
  <% end %>
<% end %>

<% transaction_type_fields = fields.keys & ["transactionType", "transactionTypeSale"] %>
<% if transaction_type_fields.any? %>
  <% for field in transaction_type_fields %>
    <transaction-type ng-model="moduleCtrl.providerConfig.<%=field%>"></transaction-type>
  <% end %>
<% end %>

<% if fields["cardCode"]%>
  <card-code ng-model="moduleCtrl.providerConfig.cardCode"></card-code>
<% end %>
<% if fields["testMode"]%>
  <test-mode ng-model="moduleCtrl.providerConfig.testMode"></test-mode>
<% end %>
